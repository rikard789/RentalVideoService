<Page
    x:Class="Frontend.MovieListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Frontend"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Nagłówek strony -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Lista Filmów"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="CornflowerBlue"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <Button Click="OnAddProductClick"
                    Content="Dodaj produkt"
                    Width="200"
                    Height="40"
                    Margin="10"
                    Grid.Column="1"/>

            <Button Click="OnLogOutClick"
                    Content="Wyloguj się"
                    Width="100"
                    Height="40"
                    Margin="10"
                    Grid.Column="2"/>
        </Grid>

        <!-- Panel wyszukiwania -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    Margin="10">
            <!-- Wyszukiwanie po nazwie -->
            <TextBox x:Name="SearchByNameTextBox"
                     PlaceholderText="Wpisz nazwę filmu"
                     Width="200"
                     Margin="5"/>
            <Button x:Name="SearchByNameButton"
                    Content="Szukaj po nazwie"
                    Margin="5"
                    Click="SearchByNameButton_Click"/>

            <!-- Wyszukiwanie po ID -->
            <TextBox x:Name="SearchByIdTextBox"
                     PlaceholderText="Wpisz ID filmu"
                     Width="100"
                     Margin="5"/>
            <Button x:Name="SearchByIdButton"
                    Content="Szukaj po ID"
                    Margin="5"
                    Click="SearchByIdButton_Click"/>
        </StackPanel>

        <!-- Lista filmów -->
  <ListView x:Name="MoviesListView"
          Grid.Row="2"
          Margin="10"
          HorizontalAlignment="Stretch"
          HorizontalContentAlignment="Stretch">
    <ListView.ItemTemplate>
        <DataTemplate x:DataType="local:Movie">
            <Border BorderThickness="1"
                    BorderBrush="DarkGray"
                    Padding="10"
                    Margin="5"
                    Background="LightGray">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- ID filmu -->
                    <TextBlock Text="{Binding MovieId}"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="Black"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0" />

                    <!-- Pozostałe informacje -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{Binding Title}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="Black"/>
                        <TextBlock Text="{Binding Genres}"
                                   FontSize="16"
                                   Foreground="Black"/>
                        <TextBlock Text="{Binding Type}"
                                   FontSize="16"
                                   Foreground="Black"/>
                        <TextBlock Text="{Binding RentalHistory}"
                                   FontSize="14"
                                   Foreground="Gray"/>
                    </StackPanel>

                    <!-- Przycisk Edytuj -->
                    <Button Grid.Column="2"
                            Content="Edytuj"
                            Margin="10"
                            Click="EditMovieButton_Click"
                            Tag="{Binding MovieId}"/>
                </Grid>
            </Border>
        </DataTemplate>
    </ListView.ItemTemplate>

    <!-- Styl dla ListViewItem -->
    <ListView.ItemContainerStyle>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
    </ListView.ItemContainerStyle>
</ListView>
    </Grid>
</Page>
